{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "src/*.tns.ts",
        "src/*.ts"
      ]
    }
  },
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts",
    "src/main.tns.ts",
    "src/polyfills.ts"
  ],
  "files": [
    "src/main.tns.ts"
  ]
  , "aya_files": [
    "src/main.tns.ts"
  ]

}
